#!/usr/bin/env python

import pyir.arg_parse
import pyir.factory
import shutil
import sys
import tempfile

if __name__ == '__main__':

    try:

        py_ir = pyir.factory.PyIr()
        py_ir.run()

    finally:

        try:
            shutil.rmtree(py_ir.args['tmp_dir'] + '/')
            py_ir.pool.terminate()
        except:
            pass
